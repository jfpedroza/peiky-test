{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "type": "mix_task",
            "name": "Phoenix server",
            "request": "launch",
            "projectDir": "${workspaceRoot}",
            "task": "phx.server",
            "env": {
                "DB_ENV_POSTGRES_USER": "postgres",
                "DB_ENV_POSTGRES_PASSWORD": "postgres",
                "DB_ENV_POSTGRES_HOST": "localhost"
            },
            "preLaunchTask": "npm: build - frontend"
        },
        {
            "type": "mix_task",
            "name": "Ecto Reset",
            "request": "launch",
            "projectDir": "${workspaceRoot}",
            "task": "ecto.reset",
            "env": {
                "DB_ENV_POSTGRES_USER": "postgres",
                "DB_ENV_POSTGRES_PASSWORD": "postgres",
                "DB_ENV_POSTGRES_HOST": "localhost"
            }
        },
        {
            "type": "mix_task",
            "name": "mix test",
            "request": "launch",
            "task": "test",
            "taskArgs": [
                "--trace"
            ],
            "startApps": true,
            "projectDir": "${workspaceRoot}",
            "requireFiles": [
                "api/test/**/test_helper.exs",
                "api/test/**/*_test.exs"
            ],
            "env": {
                "DB_ENV_POSTGRES_USER": "postgres",
                "DB_ENV_POSTGRES_PASSWORD": "postgres",
                "DB_ENV_POSTGRES_HOST": "localhost"
            }
        }
    ]
}